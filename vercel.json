{
  "version": 2,
  "builds": [
    {
      "src": "Index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/(styles\\.css|script\\.js|favicon\\.ico|logo\\.png)", "dest": "/public/$1" },
    { "src": "/api/(.*)", "dest": "/Index.js" },
    { "src": "/(.*)", "dest": "/Index.js" }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "Index.js": {
      "includeFiles": "public/**"
    }
  }
} 