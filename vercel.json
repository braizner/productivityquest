{
  "version": 2,
  "builds": [
    {
      "src": "Index.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/styles.css", "dest": "/public/styles.css" },
    { "src": "/script.js", "dest": "/public/script.js" },
    { "src": "/favicon.ico", "dest": "/public/favicon.ico" },
    { "src": "/logo.png", "dest": "/public/logo.png" },
    { "src": "/api/(.*)", "dest": "/Index.js" },
    { "src": "/(.*)", "dest": "/Index.js" }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "Index.js": {
      "includeFiles": "public/**"
    }
  }
} 